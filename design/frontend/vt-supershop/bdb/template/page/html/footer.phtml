<script type="text/javascript">
	jQuery(document).ready(function($){  
		$("#gototop").hide();
		$(function () {
			var wh = $(window).height();
			var whtml =  $(document).height();			
			$(window).scroll(function () {				
				if ($(this).scrollTop() > whtml/10) {
					$('#gototop').fadeIn();
				} else {
					$('#gototop').fadeOut();
				}
			});
			$('#gototop').click(function () {
				$('body,html').animate({
					scrollTop: 0
				}, 800);
				return false;
			});
		});
	});
</script>

