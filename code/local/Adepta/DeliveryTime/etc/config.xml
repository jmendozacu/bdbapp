<config>
    <modules>
        <Adepta_DeliveryTime>
            <version>0.1.0</version>
        </Adepta_DeliveryTime>
    </modules>
    <default>
        <carriers>
            <adeptacarrier>
                <active>0</active>
                <show_delivery_date>0</show_delivery_date>
                <model>adepta_deliverytime/carrier_adepta</model>
                <title>Adepta Carrier</title>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
                <sallowspecific>1</sallowspecific>
                <specificcountry>GB</specificcountry>
                <showmethod>0</showmethod>
                <sort_order>100</sort_order>
            </adeptacarrier>
        </carriers>
    </default>
    <global>
        <helpers>
            <adepta_deliverytime>
                <class>Adepta_DeliveryTime_Helper</class>
            </adepta_deliverytime>
        </helpers>
        <models>
            <adepta_deliverytime>
                <class>Adepta_DeliveryTime_Model</class>
            </adepta_deliverytime>
            <checkout>
                <rewrite>
                    <type_onepage>Adepta_DeliveryTime_Model_Checkout_Onepage</type_onepage>
                </rewrite>
            </checkout>
            <sales>
                <rewrite>
                    <order>Adepta_DeliveryTime_Model_Sales_Order</order>
                </rewrite>
            </sales>
        </models>
        <blocks>
            <adepta_deliverytime>
                <class>Adepta_DeliveryTime_Block</class>
            </adepta_deliverytime>
            <checkout>
                <rewrite>
                    <onepage_progress>Adepta_DeliveryTime_Block_Onepage_Progress</onepage_progress>
                </rewrite>
            </checkout>
        </blocks>
        <resources>
            <adeptadeliverytime_setup>
                <setup>
                    <module>Adepta_DeliveryTime</module>
                    <class>adepta_deliverytime/resource_setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </adeptadeliverytime_setup>
        </resources>
        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <save_date>
                        <type>singleton</type>
                        <class>adepta_deliverytime/observer</class>
                        <method>saveDesiredDeliveryTime</method>
                    </save_date>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <sales_convert_order_to_quote>
                <observers>
                    <copy_delivery_date>
                        <type>singleton</type>
                        <class>adepta_deliverytime/observer</class>
                        <method>copyDesiredDeliveryTimeToQuote</method>                        
                    </copy_delivery_date>
                </observers>
            </sales_convert_order_to_quote>
            <adminhtml_sales_order_create_process_data>
                <observers>
                    <update_order_creation_model>
                        <type>singleton</type>
                        <class>adepta_deliverytime/observer</class>
                        <method>updateOrderCreationQuoteWithDeliveryDate</method>                        
                    </update_order_creation_model>
                </observers>            
            </adminhtml_sales_order_create_process_data>
        </events>
        <fieldsets>
            <sales_convert_quote_address>
                <desired_delivery_date>
                    <to_order>*</to_order>
                </desired_delivery_date>
            </sales_convert_quote_address>
        </fieldsets>
    </global>
    <frontend>
        <layout>
            <updates>
                <adepta_deliverytime>
                    <file>adepta_deliverytime.xml</file>
                </adepta_deliverytime>
            </updates>
        </layout>
        <routers>
            <deliverytime>
                <use>standard</use>
                <args>
                    <module>Adepta_DeliveryTime</module>
                    <frontName>deliverytime</frontName>
                </args>
            </deliverytime>
        </routers>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <adepta_deliverytime>
                    <file>adepta_deliverytime.xml</file>
                </adepta_deliverytime>
            </updates>
        </layout>
    </adminhtml>
</config>
